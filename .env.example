# =====================================================
# VibeStack Environment Variables
# =====================================================

# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# =====================================================
# Toss Payments Configuration (Korea - Primary)
# Get keys from: https://developers.tosspayments.com
# =====================================================
NEXT_PUBLIC_TOSS_CLIENT_KEY="test_ck_..."             # Client Key (for frontend payment widget)
TOSS_SECRET_KEY="test_sk_..."                         # Secret Key (for backend payment approval)

# =====================================================
# Internal API Configuration
# =====================================================
INTERNAL_API_KEY="your_internal_api_key_here"         # For internal service-to-service calls (billing renew)
CRON_SECRET="your_cron_secret_here"                   # For Vercel Cron job authentication

# =====================================================
# Stripe Payment Configuration (Global - Secondary)
# For future international expansion
# =====================================================
STRIPE_SECRET_KEY="sk_test_..."                       # Stripe Secret Key
STRIPE_WEBHOOK_SECRET="whsec_..."                     # Stripe Webhook Signing Secret

# Stripe Price IDs - Pro Plan (Monthly Subscription)
STRIPE_PRICE_ID_PRO_USD="price_..."                   # Pro plan - USD ($12/month)
STRIPE_PRICE_ID_PRO_KRW="price_..."                   # Pro plan - KRW (₩15,000/month)
STRIPE_PRICE_ID_PRO_EUR="price_..."                   # Pro plan - EUR (€11/month)
STRIPE_PRICE_ID_PRO_JPY="price_..."                   # Pro plan - JPY (¥1,800/month)

# Stripe Price IDs - Team Plan (Monthly Subscription)
STRIPE_PRICE_ID_TEAM_USD="price_..."                  # Team plan - USD ($50/month)
STRIPE_PRICE_ID_TEAM_KRW="price_..."                  # Team plan - KRW (₩65,000/month)
STRIPE_PRICE_ID_TEAM_EUR="price_..."                  # Team plan - EUR (€45/month)
STRIPE_PRICE_ID_TEAM_JPY="price_..."                  # Team plan - JPY (¥7,500/month)

# Stripe Price ID - Single Content Purchase
STRIPE_PRICE_ID_SINGLE_CONTENT="price_..."            # Single purchase ($12 / ₩15,000)

# =====================================================
# Supabase Configuration (Required for database)
# =====================================================
NEXT_PUBLIC_SUPABASE_URL="https://xxx.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="eyJ..."                # Public anon key (safe for client)
SUPABASE_SERVICE_ROLE_KEY="eyJ..."                    # Service role key (server only, never expose)

# =====================================================
# Clerk Authentication (Required for auth)
# =====================================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."
CLERK_WEBHOOK_SECRET="whsec_..."

# =====================================================
# Optional Services
# =====================================================

# Algolia Search
NEXT_PUBLIC_ALGOLIA_APP_ID="your_app_id"
NEXT_PUBLIC_ALGOLIA_SEARCH_KEY="your_search_key"
ALGOLIA_ADMIN_KEY="your_admin_key"

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY="phc_..."
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN="https://xxx@xxx.ingest.sentry.io/xxx"

# =====================================================
# Task Master AI Configuration (Development)
# =====================================================
ANTHROPIC_API_KEY="your_anthropic_api_key_here"       # Required: Format: sk-ant-api03-...
PERPLEXITY_API_KEY="your_perplexity_api_key_here"     # Optional: Format: pplx-...
OPENAI_API_KEY="your_openai_api_key_here"             # Optional, for OpenAI models. Format: sk-proj-...
GOOGLE_API_KEY="your_google_api_key_here"             # Optional, for Google Gemini models.
MISTRAL_API_KEY="your_mistral_key_here"               # Optional, for Mistral AI models.
XAI_API_KEY="YOUR_XAI_KEY_HERE"                       # Optional, for xAI AI models.
GROQ_API_KEY="YOUR_GROQ_KEY_HERE"                     # Optional, for Groq models.
OPENROUTER_API_KEY="YOUR_OPENROUTER_KEY_HERE"         # Optional, for OpenRouter models.
AZURE_OPENAI_API_KEY="your_azure_key_here"            # Optional, for Azure OpenAI models (requires endpoint in .taskmaster/config.json).
OLLAMA_API_KEY="your_ollama_api_key_here"             # Optional: For remote Ollama servers that require authentication.
GITHUB_API_KEY="your_github_api_key_here"             # Optional: For GitHub import/export features. Format: ghp_... or github_pat_...
# Supabase Webhook (Algolia 동기화용)
SUPABASE_WEBHOOK_SECRET=your_webhook_secret_here
